<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.suneet.onroadwheels.VehicalRegisteration"
    android:orientation="vertical">
    <ImageView
        android:layout_margin="20dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:id="@+id/userImage"
        android:layout_gravity="center"
        android:src="@drawable/dummy_user_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="matrix"
            android:id="@+id/vechilePromo"
            android:background="@drawable/vechile_promo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/dummy_4_wheeler" />
            <Button
                android:id="@+id/button4wheeler"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGreen"
                android:text="add 4 wheeler"
                android:textSize="20dp"
                android:textStyle="normal"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:id="@+id/wheeler4CardView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/dummy_2_wheeler" />

            <Button
                android:id="@+id/button2wheeler"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                android:background="#76C2AF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add 2 wheeler" />


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:id="@+id/wheeler2CardView"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/buttonVechileNext"
        android:background="@color/colorGreen"/>
</LinearLayout>
