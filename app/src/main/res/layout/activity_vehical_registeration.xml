<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suneet.onroadwheels.VehicalRegisteration"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/userImage"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/button4wheeler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add 4 wheeler"
            android:layout_weight="1"/>
        <ImageView
            android:layout_weight="10"
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/wheeler4CardView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/button2wheeler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="add 4 wheeler"
            android:layout_weight="1"/>
        <ImageView
            android:layout_weight="10"
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/wheeler2CardView"/>
</LinearLayout>
